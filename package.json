{
  "name": "TheCyberHUB-Desktop",
  "version": "1.0.0",
  "description": "A desktop application for TheCyberHUB website",
  "main": "src/main.js",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://thecyberhub.com",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder",
    "build": "npm run build:linux && npm run build:windows && npm run build:mac",
    "build:linux": "electron-builder --linux AppImage -p never",
    "build:windows": "electron-builder --win nsis -p never",
    "build:mac": "npm install --no-optional && electron-builder --mac -p never",
    "lint": "eslint .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "build": {
    "appId": "com.thecyberhub.desktop",
    "files": [
      "dist/**/*",
      "src/main.js"
    ],
    "icon": "dict/assets/th3cyb3rhub-fav.png",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "th3cyb3rhub",
      "repo": "TheCyberHUB-Desktop",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/th3cyb3rhub/TheCyberHUB-Desktop.git"
  },
  "bugs": {
    "url": "https://github.com/th3cyb3rhub/TheCyberHUB-Desktop/issues"
  }
}
